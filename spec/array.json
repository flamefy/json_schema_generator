{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "definitions": {
    "address": {
      "id": "/address/1.json",
      "type": "object",
      "properties": {
        "street_address": { "type": "string" },
        "city":           { "type": "string" },
        "zip":            { "type": "string", "minLength": 5 }
      },
      "required": ["street_address", "city", "zip"]
    },
    "coordinates": {
      "id": "/coordinates/1.json",
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      },
      "required": ["x", "y"]
    }
  },

  "id": "/user/1.json",
  "type": "object",

  "properties": {
    "firstname": {
      "id": "/properties/firstname",
      "type": "string"
    },
    "lastname": {
      "id": "/properties/lastname",
      "type": "string"
    },
    "area": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/coordinates"
        }
      }
    },
    "addresses": {
      "type": "array",
      "minLength": 1,
      "items": {
        "$ref": "#/definitions/address"
      }
    }
  },
  "required": ["firstname", "lastname", "addresses"]
}

